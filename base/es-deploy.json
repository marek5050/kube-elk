{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "creationTimestamp": null,
    "name": "$ORG-es1",
    "labels": {
      "name": "elasticsearch",
      "org": "$ORG",
      "instance": "es1"
    }
  },
  "spec": {
    "replicas": 1,
    "strategy": {
      "type": "Recreate"
    },
    "selector": {
      "matchLabels": {
        "name": "elasticsearch",
        "org": "$ORG",
        "instance": "es1"
      }
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "name": "elasticsearch",
          "org": "$ORG",
          "instance": "es1"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "ES_JAVA_OPTS",
                "value": "-Xmx512m -Xms512m"
              },
              {
                "name": "cluster.name",
                "value": "$ORGCluster"
              },{
                "name": "path.repo",
                "value": "/usr/share/elasticsearch/backup"
              }
            ],
            "image": "docker.elastic.co/elasticsearch/elasticsearch:6.3.0",
            "name": "elasticsearch",
            "volumeMounts": [
              {
                "name": "nfsvol-data",
                "mountPath": "/usr/share/elasticsearch/backup"
              }],
            "ports": [
              {
                "containerPort": 9200
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "nfsvol-data",
            "emptyDir": {}
          }
        ],
        "restartPolicy": "Always"
      }
    }
  }
}