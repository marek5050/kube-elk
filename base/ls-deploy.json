{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "creationTimestamp": null,
    "name": "ls1",
    "labels": {
      "name": "logstash",
      "org": "$ORG",
      "instance": "ls1"
    }
  },
  "spec": {
    "replicas": 1,
    "strategy": {
      "type": "Recreate"
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "name": "logstash",
          "org": "$ORG",
          "instance": "ls1"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "LS_JAVA_OPTS",
                "value": "-Xmx256m -Xms256m"
              }
            ],
            "command": [
              "/bin/sh"
            ],
            "args": [
              "-c",
              "ls -la /usr/share/logstash/pipeline; logstash -r -f /usr/share/logstash/pipeline/logstash.conf"
            ],
            "image": "docker.elastic.co/logstash/logstash-oss:6.4.0",
            "name": "logstash",
            "ports": [
              {
                "containerPort": 8080
              }
            ],
            "resources": {
              "limits": {
                "cpu": "400m",
                "memory": "1000Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "300Mi"
              }},
              "volumeMounts": [
                {
                  "name": "config",
                  "mountPath": "/usr/share/logstash/pipeline"
                }
              ]
            }
        ],
        "volumes": [
          {
            "name": "config",
            "configMap": {
              "name": "ls1-config",
              "items": [
                {
                  "key": "logstash.conf",
                  "path": "logstash.conf"
                }
              ]
            }
          }
        ]
      }
    }
  }
}